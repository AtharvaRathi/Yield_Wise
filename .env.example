# YieldWise Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Google Gemini API Key (for AI recommendations)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Mapbox API Key (for maps and geocoding)
# Get your API key from: https://account.mapbox.com/access-tokens/
MAPBOX_API_KEY=your_mapbox_api_key_here

# OpenWeatherMap API Key (for weather data)
# Get your API key from: https://openweathermap.org/api
WEATHER_API_KEY=your_weather_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# Database Configuration (if needed in future)
# DATABASE_URL=sqlite:///yieldwise.db

# Email Configuration (if needed in future)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password
